<h1>Create a new Pet</h1>

<form action="/pets" method="post">

    <label>Pet Name:</label><br>
    <input type="text" name="pet[name]">
    <br>
    <label>Owners</label>
    <% @owners.each do |owner| %>
         <input type="checkbox" name="owner[owner_ids][]" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %><br>
    <% end %>

    <label>New Owner</label>
    <input type="text" name="owner[name]" id="owner_name">
    
    <input type="submit" value="New Pet">
</form>